            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProprietarioId" class="control-label"></label>
                <select asp-for="ProprietarioId" class ="form-control" asp-items="ViewBag.ProprietarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocatarioId" class="control-label"></label>
                <select asp-for="LocatarioId" class ="form-control" asp-items="ViewBag.LocatarioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
