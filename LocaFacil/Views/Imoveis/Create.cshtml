            <div class="form-group">
                <label asp-for="TipoImovelId" class="control-label"></label>
                <select asp-for="TipoImovelId" class ="form-control" asp-items="ViewBag.TipoImovelId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoId" class="control-label"></label>
                <select asp-for="EnderecoId" class ="form-control" asp-items="ViewBag.EnderecoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValorAluguel" class="control-label"></label>
                <input asp-for="ValorAluguel" class="form-control" />
                <span asp-validation-for="ValorAluguel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorCondominio" class="control-label"></label>
                <input asp-for="ValorCondominio" class="form-control" />
                <span asp-validation-for="ValorCondominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorIPTU" class="control-label"></label>
                <input asp-for="ValorIPTU" class="form-control" />
                <span asp-validation-for="ValorIPTU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VagaGaragem" class="control-label"></label>
                <input asp-for="VagaGaragem" class="form-control" />
